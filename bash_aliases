# syntax highlighting for cat
alias ccat='pygmentize -g'

# safety
#alias rm='rm -i'

# Directory shortcuts
alias repos="cd ~/repos"
alias dl="cd ~/Downloads"
alias downloads="cd ~/Downloads"

# Conda
alias c='conda'
alias clist='conda list'
alias cl='conda list'
alias ccreate="conda create -n"
alias cremove="conda remove --all -n"
alias condaenvs='conda info -e'
alias cenvs='conda info -e'
alias cuse='source activate'
alias use='source activate'
alias duse='source deactivate'
